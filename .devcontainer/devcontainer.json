{
  "name": "Password Manager",
  "image": "mcr.microsoft.com/devcontainers/python:3.9",
  "workspaceFolder": "/workspaces/PasswordManager",
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": false,
      "installDockerBuildx": true,
      "enableNonRootDocker": true
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.flake8",
        "ms-python.black-formatter",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "editor.formatOnSave": true
      }
    }
  },

  "forwardPorts": [3000, 8000, 5432],
  "portsAttributes": {
    "3000": {
      "label": "Frontend",
      "onAutoForward": "notify"
    },
    "8000": {
      "label": "Backend API",
      "onAutoForward": "silent"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    }
  },

  "postCreateCommand": "apt-get update && apt-get install -y docker-compose-plugin && echo 'Docker version:' && docker --version && echo 'Docker Compose version:' && docker compose --version && echo 'Starting application...' && docker compose -f docker-compose.codespaces.yml up --build -d && echo 'Application started successfully! Check the forwarded ports.'",

  "remoteUser": "root"
}